<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MessageActivity"
    android:orientation="vertical"
    android:background="@color/huibaise"
    >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/colorPrimary"
        >
        <Button
            android:id="@+id/fanhui"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="&lt;  返回"
            android:textSize="18sp"
            android:background="@null"
            android:layout_centerVertical="true"
            />
        <TextView
            android:id="@+id/xinxi"
            android:layout_height="50dp"
            android:layout_width="fill_parent"
            android:text="个人信息"
            android:gravity="center"
            android:textColor="@color/heise"
            android:textSize="19sp"
            />
    </RelativeLayout>
<RelativeLayout
    android:id="@+id/touxiang"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"

    >
    <TextView
        android:id="@+id/touxiang1"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:paddingLeft="30dp"
        android:text="头像"
        android:textColor="@color/heise"
        android:textSize="18sp" />

    <ImageButton
        android:id="@+id/touxiang2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/touxiang1"
        android:background="@null"
        android:src="@mipmap/wode_touxiang" />

</RelativeLayout>
<RelativeLayout
        android:id="@+id/yonghu"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"

        >
    <TextView
        android:id="@+id/textView2"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#ece8e8"
        />
    <TextView
        android:id="@+id/yonghuming1"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginTop="1dp"
        android:gravity="center_vertical"
        android:paddingLeft="30dp"
        android:text="用户名："
        android:textColor="@color/heise"
        android:textSize="18sp" />
    <TextView
        android:id="@+id/yonghumin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="测试"
        android:textSize="18sp"
        android:textColor="@color/heise"
        android:layout_toRightOf="@id/yonghuming1"
        android:layout_centerVertical="true"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="11dp"
        android:layout_marginRight="11dp"
        android:text="&lt;" />
</RelativeLayout>

    <RelativeLayout
        android:id="@+id/renzheng"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"

        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <TextView
            android:id="@+id/textView"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#ece8e8" />

        <TextView
            android:id="@+id/shiming1"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginTop="1dp"
            android:gravity="center_vertical"
            android:paddingLeft="30dp"
            android:text="实名认证："
            android:textColor="@color/heise"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/shiming"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/shiming1"
            android:text="否"
            android:textColor="@color/heise"
            android:textSize="18sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="11dp"
            android:layout_marginRight="11dp"
            android:text="&lt;" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/sec"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"

        >
        <TextView
            android:id="@+id/textView3"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#ece8e8"
            />
        <TextView
            android:id="@+id/xingbie1"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginTop="1dp"
            android:gravity="center_vertical"
            android:paddingLeft="30dp"
            android:text="性别："
            android:textColor="@color/heise"
            android:textSize="18sp" />
        <TextView
            android:id="@+id/xingbie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="女"
            android:textSize="18sp"
            android:textColor="@color/heise"
            android:layout_toRightOf="@id/xingbie1"
            android:layout_centerVertical="true"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="11dp"
            android:layout_marginRight="11dp"
            android:text="&lt;" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/number"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"

        >
        <TextView
            android:id="@+id/textView4"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#ece8e8"
            />
        <TextView
            android:id="@+id/phonenumber1"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginTop="1dp"
            android:gravity="center_vertical"
            android:paddingLeft="30dp"
            android:text="手机号码："
            android:textColor="@color/heise"
            android:textSize="18sp" />
        <TextView
            android:id="@+id/phonenumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="123456789"
            android:textSize="18sp"
            android:textColor="@color/heise"
            android:layout_toRightOf="@id/phonenumber1"
            android:layout_centerVertical="true"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="11dp"
            android:layout_marginRight="11dp"
            android:text="&lt;" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/address"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"

        >
        <TextView
            android:id="@+id/textView5"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#ece8e8"
            />
        <TextView
            android:id="@+id/suozaidi1"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginTop="1dp"
            android:gravity="center_vertical"
            android:paddingLeft="30dp"
            android:text="所在地："
            android:textColor="@color/heise"
            android:textSize="18sp" />
        <TextView
            android:id="@+id/suozaidi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="湖南长沙"
            android:textSize="18sp"
            android:textColor="@color/heise"
            android:layout_toRightOf="@id/suozaidi1"
            android:layout_centerVertical="true"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="11dp"
            android:layout_marginRight="11dp"
            android:text="&lt;" />
    </RelativeLayout>




</LinearLayout>