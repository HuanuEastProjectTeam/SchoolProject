<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.andriodcar.YonghumingActivity">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:background="@color/white"
        >

        <Button
            android:id="@+id/ChangePassword_fanhui"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:background="@null"
            android:text="&lt;  返回"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/ChangePassword_xinxi"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:layout_weight="1"
            android:text="修改密码"
            android:textColor="@color/heise"
            android:textSize="19sp" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:text=""
            android:textSize="18sp" />

    </LinearLayout>
    <EditText
        android:id="@+id/ChangePassword_et_old"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:inputType="textPassword"
        android:hint="请输入旧密码"
        />
    <EditText
        android:id="@+id/ChangePassword_et_new"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:hint="请输入新密码"
        />

    <Button
        android:id="@+id/ChangePassword_Comfirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:background="@drawable/btn_bg_bule"
        android:text="确认修改"
        android:textColor="#FFFFFF"
        android:textSize="25sp"/>

</LinearLayout>