<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ChargeActivity">



<!--钱包界面-->
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/colorPrimary"
    >
    <Button
        android:id="@+id/fanhui"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="&lt;  返回"
        android:textSize="18sp"
        android:background="@null"
        android:layout_centerVertical="true"
        />
        <TextView
            android:id="@+id/shezhi"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:text="设置"
            android:textSize="15sp"
            android:gravity="center_vertical"
            android:layout_marginRight="20dp"
            android:textColor="@color/heise"
            android:clickable="true"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="60dp"

        >


    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:textSize="19sp"
        android:text="@string/qianbao_zichan"
        android:gravity="center"
        android:textColor="@color/heise"
        android:clickable="true"
        />


</RelativeLayout>
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="120dp"
        android:text="￥账户余额：666元"
        android:textSize="20sp"
        android:layout_marginTop="15dp"
        android:textColor="@color/heise"

        android:gravity="center"
        />
    <Button
        android:id="@+id/tixian"
        android:layout_width="120dp"
        android:layout_height="35dp"
        android:text="提现"
        android:background="@color/lvse"
        android:layout_gravity="center"
        android:layout_marginTop="18dp"
        />
    <Button
        android:id="@+id/chongzhi"
        android:layout_width="120dp"
        android:layout_height="35dp"
        android:text="充值"
        android:background="@color/huibaise"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:id="@+id/bankid"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:text="绑定银行卡"
        android:layout_marginTop="150dp"
        android:paddingLeft="20dp"
        android:background="@color/huibaise"
        android:gravity="center"
        android:clickable="true"
        />
</LinearLayout>