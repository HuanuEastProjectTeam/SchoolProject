<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.andriodcar.OpenLack"
    android:orientation="vertical"
    >
    <TextView
        android:id="@+id/shoufei"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:text="停车位编号：1"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:textSize="30sp"

        />
    <TextView
        android:id="@+id/yuyue"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_gravity="center_horizontal"
        android:text="不是您预约的停车位"
        android:textSize="20sp"
        android:layout_marginTop="5dp"
        />
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"

        >

    <TextView
        android:id="@+id/bianhao1"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:paddingLeft="20dp"
        android:text="收费标准：前3个小时：5元/时"
        android:textSize="15sp"
        android:background="@color/huibaise"
        android:gravity="center_vertical"
        />
    <TextView
        android:id="@+id/bianhao2"
        android:layout_below="@id/bianhao1"
        android:paddingLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="收费标准：3-9小时：4元/时"
        android:textSize="15sp"
        android:background="@color/huibaise"
        android:gravity="center_vertical"
        android:layout_marginTop="2dp"
        />
    <TextView
        android:id="@+id/bianhao3"
        android:layout_below="@id/bianhao2"
        android:layout_width="match_parent"
        android:paddingLeft="20dp"
        android:layout_height="40dp"
        android:text="收费标准：过夜：50元"
        android:gravity="center_vertical"
        android:textSize="15sp"
        android:background="@color/huibaise"
        android:layout_marginTop="2dp"
        />



    </RelativeLayout>
    <Button
        android:id="@+id/openlack"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:text="开锁"
        android:textSize="30sp"
        android:background="@drawable/open_lock"
        />

</LinearLayout>
